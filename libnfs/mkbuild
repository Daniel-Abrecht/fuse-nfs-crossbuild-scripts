#!/bin/bash

src=src
build=build
out=out
uri=git@github.com:sahlberg/libnfs.git
checkout=master

root="$(realpath "$(dirname "$0")")"
parent="$(realpath "$root"/..)"

if [ -n "$LIBNFS_URI"      ]; then uri="$LIBNFS_URI"; fi
if [ -n "$LIBNFS_CHECKOUT" ]; then checkout="$LIBNFS_CHECKOUT"; fi

src="$root/$src"
build="$root/$build"
out="$root/$out"

function update {
  if [ ! -d "$src" ]
  then
    git clone -- "$uri" "$src"
  else
    cd -- "$src"
    git remote set-url origin "$uri"
    git checkout master
    git clean -f .
    git pull
  fi
  git checkout "$checkout"
  cd -- "$src"
  autoreconf --install
  cd -- "$root"
}

function compile {
  rm -rf -- "$build"
  mkdir -p -- "$build"
  cd -- "$build"
  incs=( "${INCLUDES[@]/#/-I}" )
  libs=( "${LIBS[@]/\%ARCH\%/"$1"}" )
  libs=( "${libs[@]/#/-L}" )
  "$src"/configure --host="$1" CPPFLAGS="${incs[*]} $FLAGS" CFLAGS="${incs[*]} $FLAGS" LDFLAGS="${libs[*]}"
  make
  cd -- "$root"
  mkdir -p "$out/$1"
  cp "$build"/lib/.libs/libnfs.a "$out/$1"
}

set -ex

rm -rf -- "$out"
mkdir -p -- "$out"

"$parent"/dokany/mkbuild update

update

compile "x86_64"

LIBS=( "$parent"/dokany/out/%ARCH%/ )
INCLUDES=( "$parent"/dokany/src/dokan_fuse/include/ )

compile "i686-w64-mingw32"
compile "x86_64-w64-mingw32"
